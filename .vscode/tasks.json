{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++98",
                "-g",
                "-I${workspaceFolder}/incl/",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/ServerEngine.cpp",
                "${workspaceFolder}/src/CgiHandler.cpp",
                "-o",
                "${workspaceFolder}/src/a.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task for building C++98 code"
        }
    ]
}